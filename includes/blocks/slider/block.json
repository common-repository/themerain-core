{
  "apiVersion": 3,
  "title": "ThemeRain Slider",
  "name": "themerain/slider",
  "category": "media",
  "icon": "slides",
  "attributes": {
    "verticalAlign": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "default": []
    },
    "columns": {
      "type": "number",
      "default": 2
    },
    "columnsTablet": {
      "type": "number",
      "default": 2
    },
    "columnsMobile": {
      "type": "number",
      "default": 1
    },
    "space": {
      "type": "number",
      "default": 30
    },
    "spaceTablet": {
      "type": "number",
      "default": 30
    },
    "spaceMobile": {
      "type": "number",
      "default": 30
    },
    "loop": {
      "type": "boolean",
      "default": false
    },
    "center": {
      "type": "boolean",
      "default": true
    },
    "ratio": {
      "type": "string",
      "default": "16/9"
    }
  },
  "supports": {
    "align": [ "wide", "full" ]
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}
